{
  "name": "Vanilla-JS-Boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate para projetos Vanilla JS(JavaScript puro)...",
  "main": "index.js",
  "repository": "git@github.com:chen-zhenn/boilerplates.git",
  "author": "Carlos Garcia",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "lint": "eslint",
    "test": "jest",
    "test:watch": "yarn test --watchAll",
    "ts": "tsc",
    "ts:watch": "yarn ts --watch",
    "html:watch": "yarn pug -w src/*.pug -o dist",
    "css:watch": "sass --watch src/style/sass/main.sass dist/style/css/main.css --style compressed",
    "dev": "",
    "dev:node": "nodemon dist/js/index.js"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "babel-jest": "^29.3.1",
    "eslint": "^8.31.0",
    "eslint-config-idiomatic": "^4.0.0",
    "jest": "^29.3.1",
    "lite-server": "^2.6.1",
    "nodemon": "^2.0.20",
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.57.1",
    "ts-jest": "^29.0.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
